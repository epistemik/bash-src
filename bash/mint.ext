COLOR_RESET="\[\e[30;0m\]"
     HILITE=$CYAN
        DIV=$RED
# change the title of the terminal to reflect the current location
chg_term_title='\[\e]0;\W:\j$TTA\007\]'
PROMPT_COMMAND="TTA=''"
#export PS1="${HILITE}\w${DIV} | ${HILITE}\d \t${DIV} | ${HILITE}\u@\h${DIV} | ${HILITE}\s \V${DIV}\r\n${HILITE}\!${DIV} >$COLOR_RESET " ;

# set long prompt
alias setlp='PS1="${chg_term_title}${cyan}\w${DIV} | ${green}\d \t${DIV} | ${yellow}\u@\h${DIV} | ${purple}\s \V${DIV}\r\n${cyan}\!${DIV} >$NC " ;'
setlp

# change terminal title to a particular value
chtt ()
{
  if [[ $1 ]] ; then
    chg_term_title="\[\e]0;$1\007\]"
  else
    chg_term_title='\[\e]0;\W:\j$TTA\007\]'
  fi
  PS1="${chg_term_title}${cyan}\w${DIV} | ${green}\d \t${DIV} | ${yellow}\u@\h${DIV} | ${purple}\s \V${DIV}\r\n${cyan}\!${DIV} >$NC "
}

# set var TTA to a particular value
setta ()
{
  if [[ $1 ]] ; then
    PROMPT_COMMAND="TTA=:$1"
  else
    PROMPT_COMMAND="TTA=''"
  fi
}

# add bin to PATH
ORIGPATH=$PATH
export PATH=~marksa/bin:$ORIGPATH

alias sobx='source ~marksa/.bashext'

# aliases
test -s ~marksa/.bashals && source ~marksa/.bashals
alias soba='source ~marksa/.bashals'

# functions
