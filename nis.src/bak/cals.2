# FILE LISTING
alias	ll	'ls -l \!* |more'
alias	lt	'ls -lt \!* |more'
alias	lg	'ls -dlt \!* |more'
alias	ld	'ls -l |grep drw |more'
alias	lsz	'ls -l |sort +4 |more'
alias	lct	'ls -l |wc -l'
alias	lsim	'ls -lt *.im |more'
alias	lsj	'ls -lt *.java |more'
alias	lscl	'ls -lt *.class |more'
alias	lspl	'grep -ils perl * |more'
# PROTECTED FILE DELETION
alias	del	'rm -i'
# PROCESSES
alias	pm	'ps -fu mhsatto'
alias	psv	"ps -ef |grep '[vV][iI][sS]' "
alias	vsz	"ps -ef -o vsz,comm,user |grep $USER |sort -n "
alias	top	'top 40'
alias	k9	'kill -9'
# FOLDER NAVIGATION
alias	upp	'cd ../..'
alias	uppp	'cd ../../..'
alias	upppp	'cd ../../../..'
# PROGRAMMING
alias	jcd	'javac -deprecation'
alias	pd	'perl -de 0'
alias	mk	'make -r -f \!*; date; lt *.o'
# DISK PARAMETERS
alias	duo	'du -rsk ~/* | sort -n'
alias	due	'du -rsk ./* | sort -n'
alias	dua	'du -rsk ~'
# SPECIAL COMMANDS
alias	grep	'/usr/xpg4/bin/grep'
alias	l13	'last -13'
alias	png	'ping -I 2'
alias	dt	'date'
# EDITING
alias	ve	'clear; vi'
alias	view	'/home/mhsatto/bin/nedit'
alias	xe	'xterm -j -rw -geometry 99x66 -e vi'
alias	can	'cat -n'
# FILE MODES
alias	mx	'chmod 750'
alias	mr	'chmod 664'
alias	mw	'chmod 666'
# LANDSCAPE 2-PAGE PRINTING
alias	lpga	'mp -l -o \!* | lp -s'
# ENV VARIABLE VIEWING
alias	ECHO	echo
alias	EC	echo
alias	SETENV	setenv
