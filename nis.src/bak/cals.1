# csh aliases
##############

# FILE LISTING
alias	la	'ls -a '
alias	lal	'ls -al \!* |more'
alias	ll	'ls -l \!* |more'
alias	lt	'ls -lt \!* |more'
alias	lg	'ls -dlt \!* |more'
alias	le	'lt *.\!* |more '
alias	lsd	'll | grep ^dr |more'
alias	lsz	'll | sort -r -n +4 |more'
alias	lct	'\ls |wc -w'
alias	lscc	'lt *.cc *.cpp *.C |grep -v ',' |more '
alias	lsh	'lt *.h *.hpp *.hh |grep -v ',' |more '
alias	lsrc	'lscc > .lsrctemp; lsh >> .lsrctemp; m .lsrctemp |sort +8 |grep -v ','; rm .lsrctemp'
alias	lso	'date; lt *.o *.obj |more'
alias	lsx	'date; lt | grep -e -rwx |more '
alias	lspl	'grep -ils perl * |more'
# PROTECTED FILE DELETION
alias	del	'rm -i'
# PROCESSES
alias	pm	'ps -fu mhsatto |more '
alias	psv	"ps -ef |grep '[vV][iI][sS]' "
alias	vsz	"ps -ef -o vsz,comm,user |grep $USER |sort -n "
alias	top	'top 40'
alias	k9	'kill -9'
# FOLDER NAVIGATION
alias	up	'cd ..'
alias	upp	'cd ../..'
alias	uppp	'cd ../../..'
alias	upppp	'cd ../../../..'
# PROGRAMMING
alias	jcd	'javac -deprecation'
alias	pd	'perl -de 0'
alias	mk	'make -r -f \!*; date; lso '
# DISK PARAMETERS
alias	duo	'du -rsk ~/* | sort -n'
alias	due	'du -rsk ./* | sort -n'
alias	dua	'du -rsk ~'
# SPECIAL COMMANDS
alias	socsh	'source ~/.cshrc '
alias	grep	'/usr/xpg4/bin/grep'
alias	l13	'last -13'
alias	png	'ping -I 2'
alias	dt	'date'
# EDITING
alias	ve	'clear; vi'
alias	xe	'xterm -j -rw -geometry 109x61 -title "vi \!*" -e vi \!* '
alias	view	'dtterm -j -rw -geometry 109x59 -title "vi \!*" -e vi \!* '
alias	hxd	'dtterm -j -rw -geometry 109x59 -title "hexdump \!*" -e ~mhsatto/bin/hexdump \!* '
alias	can	'cat -n'
# FILE MODES
alias	mx	'chmod 750'
alias	mr	'chmod 664'
alias	mw	'chmod 666'
# LANDSCAPE 2-PAGE PRINTING
alias	lpga	'mp -l -o \!* | lp -s'
# ENV VARIABLE VIEWING
alias	ECHO	echo
alias	EC	echo
alias	SETENV	setenv
